<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_height="61dp">

        <SearchView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/search" />

    </LinearLayout>

    <ru.yandex.yandexmapkit.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:apiKey="6zoAdC4i43~ek2plvJTw18mZJyKzHoc0wzgbOnc265mZXdil21czACJUbhBSxLUP1fgA3cuqquutwAWMgPpWBd5Hh6-BkMy2EGXWOCQx9Po=">

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:srcCompat="@drawable/ymk_zoom_plus_drawable"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/floatingActionButton"
            app:backgroundTint="?attr/colorButtonNormal"
            app:rippleColor="?attr/colorButtonNormal"
            app:fabSize="normal" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="normal"
            app:srcCompat="@drawable/ymk_zoom_minus_drawable"
            android:layout_below="@+id/floatingActionButton"
            android:layout_alignLeft="@+id/floatingActionButton"
            android:layout_alignStart="@+id/floatingActionButton"
            android:layout_marginTop="12dp"
            android:id="@+id/floatingActionButton2"
            app:backgroundTint="?attr/colorButtonNormal"
            app:rippleColor="?attr/colorButtonNormal" />

    </ru.yandex.yandexmapkit.MapView>

</LinearLayout>